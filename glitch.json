{
  "install": "pip install -r requirements.txt",
  "start": "gunicorn app:app --bind 0.0.0.0:$PORT --workers 2 --timeout 120",
  "watch": {
    "ignore": [
      "\\.pyc$",
      "^venv/",
      "^__pycache__/",
      "^\\.git/"
    ],
    "install": {
      "include": [
        "^requirements\\.txt$"
      ]
    },
    "restart": {
      "include": [
        "^\\.env$",
        "^app\\.py$",
        "^src/.+\\.py$"
      ]
    }
  }
}
